# frozen_string_literal: true

require "dotenv/tasks"
require "rake/testtask"

task default: %w[test]

task :unit do
  Rake::TestTask.new do |t|
    t.libs << "tests"
    t.test_files = FileList["tests/unit/*.rb"]
    t.verbose = true
    t.warning = true
  end
end

task integration: [:unit] do
  Rake::TestTask.new do |t|
    t.libs << "tests"
    t.test_files = FileList["tests/integration/*.rb"]
    t.verbose = true
    t.warning = true
  end
end

task test: %i[dotenv integration] do
end
